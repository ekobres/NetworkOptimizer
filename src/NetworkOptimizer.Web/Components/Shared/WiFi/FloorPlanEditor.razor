    {
        if (floorNumber <= -1) return "B" + Math.Abs(floorNumber);
        var lastTwo = Math.Abs(floorNumber) % 100;
        var suffix = (lastTwo >= 11 && lastTwo <= 13) ? "th" : (Math.Abs(floorNumber) % 10) switch
        {
            1 => "st",
            2 => "nd",
            3 => "rd",
            _ => "th"
        };
        return floorNumber + suffix;
    }

