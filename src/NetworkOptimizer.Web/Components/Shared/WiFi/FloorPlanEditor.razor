        border-radius: 8px;
        overflow: hidden;
    }

    .floor-plan-editor.fp-fullscreen {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 9999;
        border-radius: 0;
    }

