@using NetworkOptimizer.Web.Services
@inject SqmService SqmService
@inject SqmDeploymentService DeploymentService
@inject GatewaySpeedTestService GatewayService

<div class="sqm-status-panel">
    @if (isLoading)
    {
        <div class="loading-state">
            <span class="spinner"></span>
            <span>Loading SQM status...</span>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="sqm-unavailable">
            <div class="sqm-status">
                <span class="status-indicator status-@statusClass"></span>
                <span class="status-label">@statusLabel</span>
            </div>
            <p class="status-message">@errorMessage</p>
            <div class="sqm-actions">
                @if (needsGatewayConfig)
                {
                    <a href="/settings" class="btn btn-sm btn-primary">Configure Gateway</a>
                }
                else
                {
                    <a href="/sqm" class="btn btn-sm btn-primary">Configure SQM</a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="sqm-header">
            <div class="sqm-status">
                <span class="status-indicator status-@statusClass"></span>
                <span class="status-label">@statusLabel</span>
            </div>
            @if (statusData?.TcMonitorTimestamp != null)
            {
                <div class="tc-timestamp">
                    <small>Updated: @statusData.TcMonitorTimestamp.Value.ToLocalTime().ToString("HH:mm:ss")</small>
                </div>
            }
        </div>

        @if (statusData?.TcInterfaces?.Any() == true)
        {
            <div class="tc-interfaces-grid">
                @foreach (var iface in statusData.TcInterfaces)
                {
                    <div class="tc-interface-card @(iface.Status == "active" ? "active" : "inactive")">
                        <div class="interface-header">
                            <span class="interface-name">@iface.Name</span>
                            <span class="interface-status status-@iface.Status">@iface.Status</span>
                        </div>
                        <div class="interface-rate">
                            <span class="rate-value">@iface.RateMbps.ToString("F1")</span>
                            <span class="rate-unit">Mbps</span>
                        </div>
                        <div class="interface-details">
                            <small>@iface.Interface</small>
                            @if (!string.IsNullOrEmpty(iface.RateRaw))
                            {
                                <small class="rate-raw">(@iface.RateRaw)</small>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else if (deploymentStatus != null)
        {
            <div class="deployment-summary">
                <div class="deployment-item @(deploymentStatus.TcMonitorDeployed ? "deployed" : "not-deployed")">
                    <span class="item-icon">@(deploymentStatus.TcMonitorDeployed ? "✓" : "○")</span>
                    <span>TC Monitor</span>
                    @if (deploymentStatus.TcMonitorRunning)
                    {
                        <span class="badge badge-success">Running</span>
                    }
                </div>
                <div class="deployment-item @(deploymentStatus.IsDeployed ? "deployed" : "not-deployed")">
                    <span class="item-icon">@(deploymentStatus.IsDeployed ? "✓" : "○")</span>
                    <span>SQM Scripts</span>
                </div>
                @if (deploymentStatus.CronJobsConfigured > 0)
                {
                    <div class="deployment-item deployed">
                        <span class="item-icon">✓</span>
                        <span>@deploymentStatus.CronJobsConfigured Cron Jobs</span>
                    </div>
                }
            </div>
        }

        <div class="sqm-actions">
            <button class="btn btn-secondary" @onclick="RefreshStats" disabled="@isRefreshing">
                @if (isRefreshing)
                {
                    <span class="spinner-sm"></span>
                }
                else
                {
                    <span>Refresh</span>
                }
            </button>
            <a href="/sqm" class="btn btn-primary">Manage SQM</a>
        </div>
    }
</div>

@code {
    private SqmStatusData? statusData;
    private SqmDeploymentStatus? deploymentStatus;
    private bool isLoading = true;
    private bool isRefreshing = false;
    private string statusLabel = "";
    private string statusClass = "";
    private string? errorMessage;
    private bool needsGatewayConfig = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadStatus();
            StateHasChanged();
        }
    }

    private async Task LoadStatus()
    {
        isLoading = true;
        errorMessage = null;
        needsGatewayConfig = false;

        try
        {
            // First check if gateway SSH is configured
            var gatewaySettings = await GatewayService.GetSettingsAsync();

            if (string.IsNullOrEmpty(gatewaySettings?.Host) || !gatewaySettings.HasCredentials)
            {
                statusLabel = "Not Configured";
                statusClass = "not-configured";
                errorMessage = "Gateway SSH not configured. Configure your gateway connection first.";
                needsGatewayConfig = true;
                return;
            }

            // Check deployment status (this is what works on the SQM page)
            deploymentStatus = await DeploymentService.CheckDeploymentStatusAsync();

            if (!string.IsNullOrEmpty(deploymentStatus.Error))
            {
                statusLabel = "Error";
                statusClass = "offline";
                errorMessage = deploymentStatus.Error;
                return;
            }

            // Try to get live TC stats
            statusData = await SqmService.GetSqmStatusAsync();

            // Determine status based on deployment and TC monitor
            if (deploymentStatus.TcMonitorRunning && statusData?.TcInterfaces?.Any() == true)
            {
                statusLabel = "Active";
                statusClass = "active";
            }
            else if (deploymentStatus.TcMonitorDeployed)
            {
                statusLabel = "Deployed";
                statusClass = "deployed";
                if (!deploymentStatus.TcMonitorRunning)
                {
                    errorMessage = "TC Monitor deployed but not running. Check gateway.";
                }
            }
            else if (deploymentStatus.IsDeployed)
            {
                statusLabel = "Partial";
                statusClass = "warning";
                errorMessage = "SQM scripts deployed, but TC Monitor not installed.";
            }
            else
            {
                statusLabel = "Not Deployed";
                statusClass = "not-deployed";
                errorMessage = "SQM is not deployed. Deploy via the SQM Manager.";
            }
        }
        catch (Exception ex)
        {
            statusLabel = "Error";
            statusClass = "offline";
            errorMessage = $"Failed to load status: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshStats()
    {
        isRefreshing = true;
        StateHasChanged();

        try
        {
            await LoadStatus();
        }
        finally
        {
            isRefreshing = false;
            StateHasChanged();
        }
    }
}
