@using NetworkOptimizer.Web.Services
@using NetworkOptimizer.Storage.Interfaces
@implements IDisposable
@inject GatewaySpeedTestService GatewayService
@inject TcMonitorClient TcMonitorClient
@inject ISpeedTestRepository SpeedTestRepository

<div class="sqm-status-panel">
    @if (isLoading)
    {
        <div class="loading-state">
            <span class="spinner"></span>
            <span>Loading SQM status...</span>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="sqm-not-deployed">
            <div class="not-deployed-content">
                <img src="/icons/sqm-v3.png" alt="" class="not-deployed-icon" />
                <div class="not-deployed-text">
                    <span class="not-deployed-title">@statusLabel</span>
                    <span class="not-deployed-message">@errorMessage</span>
                </div>
            </div>
            <div class="sqm-actions">
                @if (needsGatewayConfig)
                {
                    <a href="/settings" class="btn btn-primary">Configure Gateway</a>
                }
                else
                {
                    <a href="/sqm" class="btn btn-primary">Deploy Adaptive SQM</a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="sqm-header">
            <div class="sqm-status">
                <span class="status-indicator status-@statusClass"></span>
                <span class="status-label">@statusLabel</span>
            </div>
            @if (statusData?.TcMonitorTimestamp != null)
            {
                <div class="tc-timestamp">
                    <small>Updated: @statusData.TcMonitorTimestamp.Value.ToLocalTime().ToString("HH:mm:ss")</small>
                </div>
            }
        </div>

        @if (statusData?.TcInterfaces?.Any() == true)
        {
            <div class="tc-interfaces-grid">
                @foreach (var iface in statusData.TcInterfaces)
                {
                    <div class="tc-interface-card @(iface.Status == "active" ? "active" : "inactive")">
                        <div class="interface-header">
                            <span class="interface-name">@iface.Name</span>
                            <span class="interface-status status-@iface.Status">@iface.Status</span>
                        </div>
                        <div class="interface-rate">
                            <span class="rate-value">@iface.RateMbps.ToString("F0")</span>
                            <span class="rate-unit">Mbps</span>
                        </div>
                        <div class="interface-details">
                            <small>@iface.Interface</small>
                            @if (!string.IsNullOrEmpty(iface.RateRaw))
                            {
                                <small class="rate-raw">(@iface.RateRaw)</small>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        <div class="sqm-actions">
            <button class="btn btn-secondary" @onclick="RefreshStats" disabled="@isRefreshing">
                @if (isRefreshing)
                {
                    <span class="spinner-sm"></span>
                }
                else
                {
                    <span>Refresh</span>
                }
            </button>
            <a href="/sqm" class="btn btn-primary">Manage SQM</a>
        </div>
    }
</div>

@code {
    private TcMonitorResponse? tcMonitorData;
    private List<TcInterfaceStats>? tcInterfaces;
    private bool isLoading = true;
    private bool isRefreshing = false;
    private string statusLabel = "";
    private string statusClass = "";
    private string? errorMessage;
    private bool needsGatewayConfig = false;
    private DateTime? lastUpdate;

    // Track if we've ever seen active status (don't flip to "Not Deployed" on transient failures)
    private bool _hasSeenActive = false;

    // Track if polling should continue
    private bool _shouldPoll = false;

    // Auto-refresh timer (60 seconds)
    private System.Threading.Timer? _refreshTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadStatus();

        // Start auto-refresh timer
        _refreshTimer = new System.Threading.Timer(
            async _ => await InvokeAsync(async () =>
            {
                if (!isRefreshing && !needsGatewayConfig && _shouldPoll)
                {
                    await LoadStatus();
                    StateHasChanged();
                }
            }),
            null,
            TimeSpan.FromSeconds(60),
            TimeSpan.FromSeconds(60));
    }

    private async Task LoadStatus(bool forceRefresh = false)
    {
        errorMessage = null;
        needsGatewayConfig = false;
        var hasSavedEnabledConfig = false;

        try
        {
            // Get gateway host from settings (fast - just DB lookup)
            var gatewaySettings = await GatewayService.GetSettingsAsync();

            if (string.IsNullOrEmpty(gatewaySettings?.Host) || !gatewaySettings.HasCredentials)
            {
                statusLabel = "Not Configured";
                statusClass = "not-configured";
                errorMessage = "Gateway SSH not configured. Configure your gateway connection first.";
                needsGatewayConfig = true;
                _shouldPoll = false;
                isLoading = false;
                return;
            }

            // Check if we have saved WAN configs with SQM enabled (parallel)
            var wan1Task = SpeedTestRepository.GetSqmWanConfigAsync(1);
            var wan2Task = SpeedTestRepository.GetSqmWanConfigAsync(2);
            await Task.WhenAll(wan1Task, wan2Task);
            hasSavedEnabledConfig = (wan1Task.Result?.Enabled == true) || (wan2Task.Result?.Enabled == true);

            // Poll TC Monitor directly (fast HTTP call, 2s timeout)
            var response = await TcMonitorClient.GetTcStatsAsync(gatewaySettings.Host, forceRefresh: forceRefresh);

            if (response != null)
            {
                // Got a response - update our state
                tcMonitorData = response;
                tcInterfaces = response.GetAllInterfaces();

                if (tcInterfaces?.Any() == true)
                {
                    statusLabel = "Active";
                    statusClass = "active";
                    lastUpdate = response.Timestamp;
                    _hasSeenActive = true;
                    // SQM is active - keep polling
                    _shouldPoll = true;
                }
                else
                {
                    // TC Monitor responded but no interfaces configured
                    statusLabel = "Not Deployed";
                    statusClass = "offline";
                    errorMessage = "Experiencing bufferbloat? Deploy Adaptive SQM to optimize your WAN performance.";
                    // Only poll if we have saved enabled configs (user is setting up)
                    _shouldPoll = hasSavedEnabledConfig;
                }
            }
            else
            {
                // TC Monitor unreachable (null response)
                if (_hasSeenActive && tcInterfaces?.Any() == true)
                {
                    // Keep showing last known good state, just mark as stale
                    statusLabel = "Active";
                    statusClass = "warning";  // Yellow to indicate stale
                    _shouldPoll = true;  // Keep polling to reconnect
                }
                else
                {
                    // Never seen active, show as not deployed
                    statusLabel = "Not Deployed";
                    statusClass = "offline";
                    errorMessage = "Experiencing bufferbloat? Deploy Adaptive SQM to optimize your WAN performance.";
                    // Only poll if we have saved enabled configs (user is setting up)
                    _shouldPoll = hasSavedEnabledConfig;
                }
            }
        }
        catch (Exception ex)
        {
            // On error, preserve last state if we had one
            if (_hasSeenActive && tcInterfaces?.Any() == true)
            {
                statusClass = "warning";  // Keep showing active but mark as stale
                _shouldPoll = true;  // Keep polling to reconnect
            }
            else
            {
                statusLabel = "Error";
                statusClass = "offline";
                errorMessage = $"Failed to load status: {ex.Message}";
                // Only poll if we have saved enabled configs
                _shouldPoll = hasSavedEnabledConfig;
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshStats()
    {
        isRefreshing = true;
        StateHasChanged();

        try
        {
            await LoadStatus(forceRefresh: true);
        }
        finally
        {
            isRefreshing = false;
            StateHasChanged();
        }
    }

    // Helper property for template compatibility
    private SqmStatusData? statusData => tcMonitorData != null ? new SqmStatusData
    {
        TcInterfaces = tcInterfaces,
        TcMonitorTimestamp = tcMonitorData.Timestamp
    } : null;

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }
}
