            var tempDevice = new DeviceSshConfiguration
            {
                Name = device.Name ?? "Unknown Device",
                Host = device.Ip,
                DeviceType = GetDeviceTypeDisplay(device.Type),
                Enabled = true,
                StartIperf3Server = true
            };

