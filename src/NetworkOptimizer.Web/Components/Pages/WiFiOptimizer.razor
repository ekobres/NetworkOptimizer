@code {
    [SupplyParameterFromQuery(Name = "client")]
    public string? ClientQueryParam { get; set; }

    private bool _loading = true;
    private bool _refreshing = false;
    private string _activeTab = "overview";
    private string? _initialClientMac;

    private void SetActiveTab(string tab)
    {
        _activeTab = tab;
        // Clear client filter when manually switching tabs
        _initialClientMac = null;
    }
    private SiteHealthScore? _healthScore;
    private WiFiSummary? _summary;
    private List<AccessPointSnapshot> _accessPoints = new();
    private List<Iperf3Result> _speedTestResults = new();
    private List<SignalMapPoint> _signalMapPoints = new();
    private List<ApMapMarker> _apMapMarkers = new();
    private System.Threading.Timer? _mapPollTimer;

    protected override void OnInitialized()
    {
        // Deep link: auto-open Client Stats tab with specific client
        if (!string.IsNullOrEmpty(ClientQueryParam))
        {
            _activeTab = "client";
            _initialClientMac = ClientQueryParam;
        }

        ConnectionService.OnConnectionChanged += OnConnectionChanged;
        _ = LoadDataAsync();

        // Poll for new speed test results and signal data every 5 seconds
        _mapPollTimer = new System.Threading.Timer(async _ =>
        {
            try
            {
                await InvokeAsync(async () =>
                {
                    var now = DateTime.UtcNow;
                    var speedTestTask = SpeedTestService.GetResultsAsync(count: 0);
                    var signalTask = DashboardService.GetSignalMapPointsAsync(
                        null, now.AddDays(-7), now);

                    await Task.WhenAll(speedTestTask, signalTask);

                    _speedTestResults = await speedTestTask;
                    _signalMapPoints = await signalTask;
                    StateHasChanged();
                });
            }
            catch { /* prevent timer death */ }
        }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
    }

    protected override void OnParametersSet()
    {
        // Handle query param changes when already on this page (Blazor reuses the component)
        if (!string.IsNullOrEmpty(ClientQueryParam) && ClientQueryParam != _initialClientMac)
        {
            _activeTab = "client";
            _initialClientMac = ClientQueryParam;
        }
    }

    private async void OnConnectionChanged()
    {
        WiFiService.ClearCache();
        await LoadDataAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadDataAsync()
    {
        _loading = true;
        StateHasChanged();

        try
        {
            await ConnectionService.WaitForConnectionAsync();

            // Load all data in parallel
            var now = DateTime.UtcNow;
            var summaryTask = WiFiService.GetSummaryAsync();
            var healthTask = WiFiService.GetSiteHealthScoreAsync();
            var apsTask = WiFiService.GetAccessPointsAsync();
            var speedTestTask = SpeedTestService.GetResultsAsync(count: 0);
            var signalTask = DashboardService.GetSignalMapPointsAsync(
                null, now.AddDays(-7), now);

            await Task.WhenAll(summaryTask, healthTask, apsTask, speedTestTask, signalTask);

            _summary = await summaryTask;
            _healthScore = await healthTask;
            _accessPoints = await apsTask;
            _speedTestResults = await speedTestTask;
            _signalMapPoints = await signalTask;

            // Build AP map markers (join AP snapshots with saved locations)
            await LoadApMarkers();
        }
        finally
        {
            _loading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task RefreshData()
    {
        _refreshing = true;
        StateHasChanged();

        try
        {
            WiFiService.ClearCache();

            var now = DateTime.UtcNow;
            var summaryTask = WiFiService.GetSummaryAsync();
            var healthTask = WiFiService.GetSiteHealthScoreAsync(forceRefresh: true);
            var apsTask = WiFiService.GetAccessPointsAsync(forceRefresh: true);
            var speedTestTask = SpeedTestService.GetResultsAsync(count: 0);
            var signalTask = DashboardService.GetSignalMapPointsAsync(
                null, now.AddDays(-7), now);

            await Task.WhenAll(summaryTask, healthTask, apsTask, speedTestTask, signalTask);

            _summary = await summaryTask;
            _healthScore = await healthTask;
            _accessPoints = await apsTask;
            _speedTestResults = await speedTestTask;
            _signalMapPoints = await signalTask;

            await LoadApMarkers();
        }
        finally
        {
            _refreshing = false;
            StateHasChanged();
        }
    }

    private async Task LoadApMarkers()
    {
        try
        {
            _apMapMarkers = await ApMapService.GetApMapMarkersAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"LoadApMarkers error: {ex.Message}");
        }
    }

    private async Task HandleApLocationChanged((string Mac, double Lat, double Lng) args)
    {
        try
        {
            await ApMapService.SaveApLocationAsync(args.Mac, args.Lat, args.Lng);

            var marker = _apMapMarkers.FirstOrDefault(m => m.Mac.Equals(args.Mac, StringComparison.OrdinalIgnoreCase));
            if (marker != null)
            {
                marker.Latitude = args.Lat;
                marker.Longitude = args.Lng;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving AP location: {ex.Message}");
        }
    }

    private void HandleMapClientClick(string mac)
    {
        _activeTab = "client";
        _initialClientMac = mac;
        StateHasChanged();
    }

