@page "/login"
@rendermode InteractiveServer
@layout AuthLayout
@using NetworkOptimizer.Web.Services
@inject NavigationManager Navigation
@inject AdminAuthService AdminAuth
@inject JwtService JwtService

<PageTitle>Login - Network Optimizer</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="/images/ozark-connect-logo.png" alt="Network Optimizer" class="login-logo" />
            <h1>Network Optimizer</h1>
            <p class="login-subtitle">for UniFi</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
            </div>
        }

        <form @onsubmit="HandleLogin" @onsubmit:preventDefault>
            <div class="form-group">
                <label class="form-label">Password</label>
                <input type="password"
                       class="form-control"
                       @bind="password"
                       @bind:event="oninput"
                       placeholder="Enter admin password"
                       autofocus
                       disabled="@isLoading" />
            </div>

            <button type="submit" class="btn btn-primary login-btn" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner"></span>
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </button>
        </form>

        @if (isAutoGenerated)
        {
            <div class="login-footer">
                <small class="text-muted">
                    Using auto-generated password from startup logs.<br/>
                    Set a permanent password in Settings after login.
                </small>
            </div>
        }
    </div>
</div>

@code {
    private string password = "";
    private string? errorMessage;
    private bool isLoading;
    private bool isAutoGenerated;

    protected override async Task OnInitializedAsync()
    {
        var source = await AdminAuth.GetPasswordSourceAsync();
        isAutoGenerated = source == AdminPasswordSource.AutoGenerated;
    }

    private async Task HandleLogin()
    {
        if (string.IsNullOrEmpty(password))
        {
            errorMessage = "Please enter a password";
            return;
        }

        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var isValid = await AdminAuth.ValidatePasswordAsync(password);

            if (isValid)
            {
                // Generate JWT token
                var token = await JwtService.GenerateTokenAsync();

                // Set cookie and redirect to home
                Navigation.NavigateTo($"/api/auth/set-cookie?token={Uri.EscapeDataString(token)}&returnUrl=/", forceLoad: true);
            }
            else
            {
                errorMessage = "Invalid password";
                password = "";
            }
        }
        catch (Exception)
        {
            errorMessage = "Login failed. Please try again.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
