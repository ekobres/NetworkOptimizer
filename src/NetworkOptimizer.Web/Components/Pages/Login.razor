@page "/login"
@layout AuthLayout
@using NetworkOptimizer.Web.Services
@inject NavigationManager Navigation
@inject AdminAuthService AdminAuth
@inject JwtService JwtService
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Login - Network Optimizer</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="/images/ozark-connect-logo.png" alt="Network Optimizer" class="login-logo" />
            <h1>Network Optimizer</h1>
            <p class="login-subtitle">for UniFi</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
            </div>
        }

        <EditForm Model="loginModel" OnValidSubmit="HandleLogin" FormName="LoginForm">
            <div class="form-group">
                <label class="form-label">Password</label>
                <input type="password"
                       class="form-control"
                       @bind="loginModel.Password"
                       placeholder="Enter admin password"
                       autofocus
                       disabled="@isLoading" />
            </div>

            <button type="submit" class="btn btn-primary login-btn" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner"></span>
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </button>
        </EditForm>

        <div class="login-footer">
            <small class="text-muted">
                @passwordSourceHint
            </small>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;
    private string passwordSourceHint = "";
    private bool isLoading;

    protected override async Task OnInitializedAsync()
    {
        // Show hint about password source
        var source = await AdminAuth.GetPasswordSourceAsync();
        passwordSourceHint = source switch
        {
            AdminPasswordSource.Database => "Using database password",
            AdminPasswordSource.Environment => "Using environment variable (APP_PASSWORD)",
            AdminPasswordSource.AutoGenerated => "Using auto-generated password (check startup logs)",
            _ => ""
        };
    }

    private async Task HandleLogin()
    {
        if (string.IsNullOrEmpty(loginModel.Password))
        {
            errorMessage = "Please enter a password";
            return;
        }

        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var isValid = await AdminAuth.ValidatePasswordAsync(loginModel.Password);

            if (isValid)
            {
                // Generate JWT token
                var token = await JwtService.GenerateTokenAsync();

                // Set cookie via JavaScript interop (since we can't access HttpContext directly in Blazor Server)
                Navigation.NavigateTo($"/api/auth/set-cookie?token={Uri.EscapeDataString(token)}&returnUrl=/", forceLoad: true);
            }
            else
            {
                errorMessage = "Invalid password";
                loginModel.Password = "";
            }
        }
        catch (Exception)
        {
            errorMessage = "Login failed. Please try again.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private class LoginModel
    {
        public string Password { get; set; } = "";
    }
}
